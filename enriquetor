#!/usr/bin/ruby

require_relative "bullshit_generator"
require_relative "translator"
require_relative "human_typing_formatter"

message = ARGV[0] || BullShitGenerator.generate
translated_message = Translator.translate(message)
human_typing = HumanTypingFormatter.format(translated_message)

human_typing.each do |line|
  print "Enrique is typing..."
  sleep(line[:typing_millis] / 1000.0)
  print "\r                    \r"
  puts "@enrique: " + line[:text] + "\n"
end

